<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="mainPage" fx:controller="FinalProject.Controller"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-font-family: Times New Roman bold, Arial, sans-serif;">
    <left>
        <VBox maxWidth="299">
            <Label text="Products">
                <font>
                    <Font name="Times New Roman bold" size="25.0" />
                </font>
            </Label>
            <TextField fx:id="searchProductField"/>
            <Button text="Search" prefWidth="90"
                    onAction="#searchProduct"/>

            <TableView fx:id="productsList">
                <columns>
                    <TableColumn text = "ID" prefWidth="25.0">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Price">
                        <cellValueFactory>
                            <PropertyValueFactory property="price"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Quantity">
                        <cellValueFactory>
                            <PropertyValueFactory property="stock"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Min">
                        <cellValueFactory>
                            <PropertyValueFactory property="min"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Max">
                        <cellValueFactory>
                            <PropertyValueFactory property="max"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>

            <Button text="Modify" prefWidth="90"
                    onAction="#modifyProduct"/>
            <Button text="Add" prefWidth="90"
                    onAction="#addProduct"/>
            <Button text="Delete" prefWidth="90"
                    onAction="#deleteProduct"/>
        </VBox>
    </left>
    <center>
        <VBox>
            <Label text="Associated Parts">
                <font>
                    <Font name="Times New Roman bold" size="20.0" />
                </font>
            </Label>
            <TableView fx:id="associatedPartsList">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text = "ID">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Price">
                        <cellValueFactory>
                            <PropertyValueFactory property="price"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Quantity">
                        <cellValueFactory>
                            <PropertyValueFactory property="stock"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Min">
                        <cellValueFactory>
                            <PropertyValueFactory property="min"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Max">
                        <cellValueFactory>
                            <PropertyValueFactory property="max"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Creator">
                        <cellValueFactory>
                            <PropertyValueFactory property="machineOrCompany"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
        </TableView>
        </VBox>
    </center>
    <right>
        <VBox maxWidth="355">
            <Label text="Parts">
                <font>
                    <Font name="Times New Roman bold" size="25.0" />
                </font>
            </Label>
            <TextField fx:id="searchPartField"/>
            <Button text="Search" prefWidth="90"
                    onAction="#searchPart"/>

            <TableView fx:id="partsList" onMouseClicked="#partListClick">

                <columns>
                    <TableColumn text = "ID" prefWidth="25.0">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Price">
                        <cellValueFactory>
                            <PropertyValueFactory property="price"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Quantity">
                        <cellValueFactory>
                            <PropertyValueFactory property="stock"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Min">
                        <cellValueFactory>
                            <PropertyValueFactory property="min"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Max">
                        <cellValueFactory>
                            <PropertyValueFactory property="max"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text = "Creator">
                        <cellValueFactory>
                            <PropertyValueFactory property="machineOrCompany"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>

            <Button text="Modify" prefWidth="90"
                    onAction="#modifyPart"/>
            <Button text="Add" prefWidth="90"
                    onAction="#addPart"/>
            <Button text="Delete" prefWidth="90"
                    onAction="#deletePart"/>
        </VBox>
    </right>
</BorderPane>


